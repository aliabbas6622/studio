
{
  "entities": {
    "Peer": {
      "title": "Peer",
      "description": "A device currently active on the network.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "ip": { "type": "string" },
        "networkId": { "type": "string" },
        "deviceType": { "type": "string", "enum": ["android", "windows", "mac", "ios", "linux"] },
        "lastSeen": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["online", "offline"] }
      },
      "required": ["id", "name", "networkId", "status"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/peers/{peerId}": {
      "schema": { "$ref": "#/backend/entities/Peer" },
      "description": "Collection of active devices discovered on the network."
    }
  }
}
